mixin advert-list(array)

  ul.advert-list
    each item in array
      li
        a(href= item.link).cmn__text.cmn__underline.cmn__main= item.name
        .advert-list__views
          svg(width="18" height="18")
            use(xlink:href="#icon-view")
          span.cmn__text.cmn__main= item.views

          